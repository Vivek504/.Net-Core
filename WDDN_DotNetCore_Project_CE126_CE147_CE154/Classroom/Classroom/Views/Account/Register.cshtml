@model RegisterViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>Registration</title>
</head>
<body>
    <div class="mt-3">
        <h2>Registration</h2>
    </div>
    <hr />
    <form method="post" style="margin-left: 5px;">
        <div class="mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <br /><br />
        Already on Classroom? <a asp-controller="Account" asp-action="Login">Sign In</a>
        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</body>
</html>