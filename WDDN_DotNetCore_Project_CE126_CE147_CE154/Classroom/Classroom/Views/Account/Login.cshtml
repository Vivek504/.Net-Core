@model LoginViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="mt-3">
        <h2>Login</h2>
    </div>
    <hr />
    <form asp-controller="Account" asp-action="Login" method="post" style="margin-left: 5px;">
        <div class="mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="mb-3">
            <div class="checkbox">
                <label class="form-label" asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <br /><br />
        New User? <a asp-controller="Account" asp-action="Register">Sign Up</a>
        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</body>
</html>